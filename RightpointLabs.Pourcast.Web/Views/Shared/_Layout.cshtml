@using RightpointLabs.Pourcast.Web.Properties
@using System.Web.Optimization

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Html.Raw(string.Format("{0} - {1}", Resources.Application, Resources.Description))</title>
    <script type="text/javascript" src="//use.typekit.net/nkq0kvi.js"></script>
    <script type="text/javascript">try { Typekit.load(); } catch (e) { }</script>
    @Styles.Render("~/Content/css/bootstrap")
    @Styles.Render("~/Content/css/bootstrap-theme")
    <link href="~/Content/bubbles.css" rel="stylesheet" /> @* The bundler hates this file for some reason *@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizer")
    
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet"> @* temp til we get images for speach bubbles*@
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(Resources.Application, "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <footer>
            <p>@Html.Raw(string.Format("&copy; {0} - {1} {2} <br /> {3}", DateTime.Now.Year, Resources.Company, Resources.Application, Resources.Made))</p>
        </footer>
    </div>
    
    @RenderSection("templates", required: false)
    
    @Scripts.Render("~/bundles/jquery", "~/bundles/bootstrap", "~/bundles/jqueryUI", "~/bundles/knockout", "~/bundles/toastr", "~/bundles/moment", "~/bundles/signalr")
    <script src="~/signalr/hubs"></script>
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
    
    <script type="text/javascript">
        $(function() {
            if (pourcast) {
                pourcast.app.init();
            }
        });
    </script>
</body>
</html>