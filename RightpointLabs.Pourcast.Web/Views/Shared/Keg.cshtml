<div class="keg-info side" data-bind="style: { background: beer().backgroundColor }, bubbles: {}">

    <div class="status">
        <div class="bits">
            <div class="remaining bit" data-bind="css: percentRemainingBubble">
                
                <span class="percent" data-bind="text: percentRemaining"></span>
            </div>
        </div>

        <div class="profile">
            <div class="beer-level" data-bind="style: { height: percentRemaining, background: beer().color }"></div>
            <div class="keg">
                <img class="body" src="/Content/themes/base/images/keg.png" />
                <img class="face" src="/Content/themes/base/images/face-happy.png" />
            </div>
            <img class="ring" src="/Content/themes/base/images/ring.png">
        </div>
    </div>




    <div class="beer" data-bind="with: beer">
        <h1 class="name" data-bind="text: name"></h1>

        <h1 class="brewery" data-bind="with: brewery">
            <span data-bind="text: name"></span>  •  <span class="location">Location</span>
        </h1>

        <div class="style" ><span data-bind="text: style"></span></div>
    </div>
</div>