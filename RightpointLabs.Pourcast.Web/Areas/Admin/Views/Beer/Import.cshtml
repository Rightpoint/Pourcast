@using System.Net.Http
@using RightpointLabs.Pourcast.Web.Properties
@model RightpointLabs.Pourcast.Web.Areas.Admin.Models.ImportBeerViewModel

@{
    ViewBag.Title = "Import";
}

<h2>Import Beer List</h2>

<form action="" method="POST" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.BreweryId)

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.BreweryName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.BreweryName, new
                {
                    @readonly = "readonly"
                })
            </div>
        </div>

        <div class="form-group">
            <label for="file" class="control-label col-md-2">Filename:</label>      
            <div class="col-md-10">
                <input type="file" name="file" id="file"/>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Resources.Admin_Beer_Create_SubmitButton" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>