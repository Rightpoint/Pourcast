@model RightpointLabs.Pourcast.Web.Areas.Admin.Models.EditBeerViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>EditBeerViewModel</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ABV, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ABV)
                @Html.ValidationMessageFor(model => model.ABV)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BAScore, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BAScore)
                @Html.ValidationMessageFor(model => model.BAScore)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StyleId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.StyleId, Model.Styles)
                @Html.ValidationMessageFor(model => model.StyleId)
            </div>
        </div>
        @Html.HiddenFor(m => m.BreweryId)
        <div class="form-group">
            @Html.LabelFor(model => model.BreweryName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.BreweryName, new {@readonly = "readonly"})
                @Html.ValidationMessageFor(model => model.BreweryName)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Details", "Details", Model.Id)
</div>
