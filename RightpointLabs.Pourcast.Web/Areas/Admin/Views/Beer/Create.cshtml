@using RightpointLabs.Pourcast.Web.Properties
@model RightpointLabs.Pourcast.Web.Areas.Admin.Models.CreateBeerViewModel
@{
    ViewBag.Title = Resources.Admin_Beer_Create_Title;
}

<h2>@Resources.Admin_Beer_Create_Title</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@Resources.Admin_Beer_Create_Beer</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BreweryName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.BreweryName, new {@readonly = "readonly"})
                @Html.ValidationMessageFor(model => model.BreweryName)
            </div>
            @Html.HiddenFor(m => m.BreweryId)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ABV, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ABV)
                @Html.ValidationMessageFor(model => model.ABV)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BAScore, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BAScore)
                @Html.ValidationMessageFor(model => model.BAScore)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StyleId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(a => a.StyleId, Model.Styles)
                @Html.ValidationMessageFor(model => model.StyleId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Resources.Admin_Beer_Create_SubmitButton" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Import Beer List", "Import", new {breweryId = Model.BreweryId})
</div>
