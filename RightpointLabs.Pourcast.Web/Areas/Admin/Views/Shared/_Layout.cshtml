@using RightpointLabs.Pourcast.Web.Areas.Admin.Controllers
@using RightpointLabs.Pourcast.Web.Properties
@using System.Web.Optimization


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @Resources.Application</title>
    @Styles.Render("~/Content/css/bootstrap")
    @Styles.Render("~/Content/css/bootstrap-theme")
    @Scripts.Render("~/bundles/modernizer")
</head>
<body>
    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(Resources.Application, "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li @Html.Raw(this.ViewContext.Controller.GetType() == (typeof(TapController)) ? "class='active'" : "")>@Html.ActionLink("Manage Taps", "Index", "Tap")</li>
                    <li @Html.Raw(this.ViewContext.Controller.GetType() == (typeof(KegController)) ? "class='active'" : "")>@Html.ActionLink("Manage Kegs", "Index", "Keg")</li>
                    <li @Html.Raw(this.ViewContext.Controller.GetType() == (typeof(BeerController)) ? "class='active'" : "")>@Html.ActionLink("Manage Beers", "Index", "Beer")</li>
                    <li @Html.Raw(this.ViewContext.Controller.GetType() == (typeof(StyleController)) ? "class='active'" : "")>@Html.ActionLink("Manage Styles", "Index", "Style")</li>
                    <li @Html.Raw(this.ViewContext.Controller.GetType() == (typeof(BreweryController)) ? "class='active'" : "")>@Html.ActionLink("Manage Breweries", "Index", "Brewery")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @Resources.Company | @Resources.Made</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryUI")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>